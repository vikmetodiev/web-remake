{
    "compilerOptions": {
      "target": "es6",
      "module": "esnext",
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "noEmit": true,
      "jsx": "react",
      "noEmitHelpers": true,
      "strictNullChecks": false,
      "lib": [
        "dom",
        "es6"
      ]
    },
    "exclude": [
      "node_modules",
      "build"
    ],
    "compileOnSave": false,
    "buildOnSave": false
  }